@model UniMarte.Web.Models.Relatorio

@{
    var mensagem = "Obrigado por sua participação! Volte sempre!";
    var estrelas = (int)Math.Round(Model.MediaEstrelas); // Quantidade de estrelas baseadas na média
}

<div class="container">
    <h2>Relatório de Visitantes</h2>

    <div class="stats-container">
        <div class="stat-item">
            <strong>Total de Visitantes:</strong>
            <span>@Model.TotalVisitantes</span>
        </div>

        <div class="stat-item">
            <strong>Média das Respostas:</strong>
            <span>@Model.MediaEstrelas</span>
        </div>
    </div>

    <div class="stars-container">
        @for (int i = 1; i <= 5; i++)
        {
            if (i <= estrelas)
            {
                <span class="star-filled">&#9733;</span>
            }
            else
            {
                <span class="star-empty">&#9734;</span>
            }
        }
    </div>

    <div class="message">
        @mensagem
    </div>

    <div class="btn-container">
        <form action="@Url.Action("Index", "Home")" method="get">
            <button type="submit" class="btn-fim">Finalizar</button>
        </form>
    </div>
</div>



