@model UniMarte.Web.Models.Relatorio

@{
    var mensagem = "Obrigado por sua participação! Volte sempre!";
    var estrelas = (int)Math.Round(Model.MediaEstrelas); // Quantidade de estrelas baseadas na média
}

<h2>Relatório de Visitantes</h2>

<p>Total de Visitantes: @Model.TotalVisitantes</p>

<p>Média das Respostas (Estrelas): @Model.MediaEstrelas</p>

<div>
    <label>Avaliação:</label>
    @for (int i = 1; i <= 5; i++)
    {
        if (i <= estrelas)
        {
            <span style="color: gold;">&#9733;</span>  <!-- Estrela preenchida -->
        }
        else
        {
            <span>&#9734;</span>  <!-- Estrela vazia -->
        }
    }
</div>

<p>@mensagem</p>

<!-- Botão para voltar para a tela inicial -->
<form action="@Url.Action("Index", "Home")" method="get">
    <button type="submit">Fim</button>
</form>
