<Window x:Class="UniMarteWpf.Apresentacao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniMarteWpf.Apresentacao"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" WindowStyle="None">
    
    <Grid MouseDown="Grid_MouseDown">
        <!-- Imagem de fundo -->
        <Image x:Name="BackgroundImage" Stretch="UniformToFill"/>

        <!-- Informação ao usuário -->
        <Border CornerRadius="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Margin="100" Padding="20 10 20 10">
            <TextBlock Text="Toque na tela para iniciar a navegação"
                       FontSize="32"
                       FontFamily="Montserrat"
                       Foreground="Black"/>
        </Border>

    </Grid>
</Window>
