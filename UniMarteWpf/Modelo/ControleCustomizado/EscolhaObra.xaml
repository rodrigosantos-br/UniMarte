<UserControl x:Class="UniMarteWpf.Modelo.ControleCustomizado.EscolhaObra"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniMarteWpf.Modelo.ControleCustomizado"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Margin="20">
        <ContentControl x:Name="ctcPergunta" />
        <TextBlock Text="Escolha uma obra:" FontSize="18" Margin="0,0,0,10"/>
        <ComboBox x:Name="comboObras" Width="300" SelectionChanged="ComboBox_SelectionChanged">
        </ComboBox>
    </StackPanel>
</UserControl>
